<?xml version="1.0"?>
<odoo>
    <template id="monivertical_staandard_header" inherit_id="web.external_layout_standard" active="False">
        <xpath expr="//div[hasclass('header')]" position="replace">
            <div class="header">
                <div class="row">
                    <div class="col-xs-3">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;" />
                    </div>
                    <div class="col-xs-5">
                        <div class="row">
                            <span style="font-size: 7px;" t-if="company.partner_id">Representante Exclusivo en Perú:</span>
                        </div>
                        <div class="row">
                            <t t-foreach="company.partner_id" t-as="partner">
                                <img t-if="partner.image" t-att-src="'data:image/png;base64,%s' % partner.image" style="max-height: 35px;" />
                            </t>
                        </div>
                    </div>
                    <div class="col-xs-4 text-right" style="margin-top:20px;" t-field="company.report_header" />
                </div>
                <div class="row zero_min_height">
                    <div class="col-xs-12">
                        <div style="border-bottom: 1px solid black;" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6" name="company_address">
                        <span t-field="company.partner_id" t-options="{'widget': 'contact', 'fields': ['address', 'name'], 'no_marker': true}" style="border-bottom: 1px solid black; display:inline-block;" />
                    </div>
                </div>
            </div>
            <!-- <div class="article o_report_layout_standard">
                <t t-raw="0" />
            </div> -->
        </xpath>
    </template>
    <template id="odoo_staandard_footer">
        <div class="footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <li t-if="company.phone">Phone: <span t-field="company.phone" /></li>
                    <li t-if="company.email">Email: <span t-field="company.email" /></li>
                    <li t-if="company.website">Web: <span t-field="company.website" /></li>
                    <li t-if="company.vat">
                        <t t-esc="company.country_id.vat_label or 'TIN'" />: <span t-field="company.vat" /></li>
                </ul>
                <div name="financial_infos">
                    <span t-field="company.report_footer" />
                </div>
                <div class="text-muted">
                    Page: <span class="page" /> / <span class="topage" />
                </div>
            </div>
        </div>
        <!-- <div class="article o_report_layout_standard">
            <t t-raw="0" />
        </div> -->
    </template>
    <template id="nanotec_layouts_external_custom_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id" />
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company" />
        </t>
        <t t-call="monivertical_report_customization.nanotec_layouts_external_layout_custom_header" />
        <t t-raw="0" />
        <t t-call="report.external_layout_footer" />
    </template>
    <template id="nanotec_layouts_external_custom_layout_header">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id" />
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company" />
        </t>
        <t t-call="monivertical_report_customization.nanotec_layouts_external_layout_custom_header" />
        <t t-raw="0" />
    </template>
    <template id="nanotec_layouts_external_custom_layout_header1">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id" />
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company" />
        </t>
        <t t-call="monivertical_report_customization.nanotec_layouts_external_layout_custom_header" />
        <t t-raw="0" />
        <t t-call="monivertical_report_customization.nanotec_layouts_external_layout_footer1" />
    </template>
    <template id="nanotec_layouts_external_layout_custom_header">
        <div class="header">
            <div class="row">
                <div class="col-xs-3">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;" />
                </div>
                <div class="col-xs-9 text-right" style="margin-top:20px;" t-field="company.report_header" />
            </div>
            <div class="row zero_min_height">
                <div class="col-xs-12">
                    <div style="border-bottom: 1px solid black;" />
                </div>
            </div>
        </div>
    </template>
    <template id="nanotec_layouts_external_layout_footer1">
        <div class="footer">
            <div class="text-center" style="border-top: 1px solid black; font-size:10px; font-family:sans-serif">
                <ul t-if="not company.x_custom_footer" class="list-inline">
                    <li t-if="company.phone">Phone: <span t-field="company.phone" /></li>
                    <li t-if="company.phone">&amp;bull;</li>
                    <!-- <li t-if="company.fax">Fax: <span t-field="company.fax" /></li> -->
                    <li t-if="company.email">&amp;bull;</li>
                    <li t-if="company.email">Email: <span t-field="company.email" /></li>
                    <li t-if="company.website">&amp;bull;</li>
                    <li t-if="company.website">Website: <span t-field="company.website" /></li>
                </ul>
                <ul class="list-inline">
                    <li>Page:</li>
                    <li><span class="page" /></li>
                    <li>/</li>
                    <li><span class="topage" /></li>
                </ul>
            </div>
        </div>
    </template>
    <template id="nanotec_layouts_external_layout_header1">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc" />
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id" />
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company" />
        </t>
        <div class="header">
            <div class="row">
                <div class="col-xs-3 mb4">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 45px;" />
                </div>
                <div class="col-xs-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto" />
            </div>
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-xs-12">
                    <div style="border-bottom: 1px solid black;" />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6" name="company_address">
                    <span t-field="company.partner_id" t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' style="border-bottom: 1px solid black; display:inline-block;" />
                </div>
            </div>
        </div>
        <div class="article o_report_layout_standard">
            <t t-raw="0" />
        </div>
        <t t-call="monivertical_report_customization.nanotec_layouts_external_layout_footer1" />
    </template>
    <template id="fxo_report_saleorder_document_custom" name="fxo_report_saleorder_document_custom">
        <t t-call="monivertical_report_customization.nanotec_layouts_external_layout_header1">
            <div class="page">
                <div class="oe_structure" />
                <div class="row">
                    <div class="col-xs-6">
                        <strong t-if="o.partner_shipping_id == o.partner_invoice_id">Dirección de facturación y de envío:</strong>
                        <strong t-if="o.partner_shipping_id != o.partner_invoice_id">Dirección de facturación:</strong>
                        <!-- <div t-field="o.partner_invoice_id" 
                                t-options="{'no_marker': True}" /> -->
                        <div t-field="o.partner_invoice_id" t-options="{'widget': 'contact', 'fields': ['address', 'name', 'phone', 'fax'], 'no_marker': true}" />
                    </div>
                </div>
                <h2>
                        <span t-if="o.state not in ['draft','sent']">Pedido Nº </span>
                        <span t-if="o.state in ['draft','sent']">Cotización No. </span>
                        <span t-field="o.name"/>
                    </h2>
                <div class="row mt32 mb32" id="informations">
                    <div t-if="o.client_order_ref" class="col-xs-3">
                        <strong>Your Reference:</strong>
                        <p t-field="o.client_order_ref" />
                    </div>
                    <div t-if="o.date_order" class="col-xs-3">
                        <strong t-if="o.state not in ['draft','sent']">Fecha pedido:</strong>
                        <strong t-if="o.state in ['draft','sent']">Fecha de presupuesto:</strong>
                        <p t-field="o.date_order" />
                    </div>
                    <div t-if="o.user_id.name" class="col-xs-3">
                        <strong>Salesperson:</strong>
                        <p t-field="o.user_id.name" />
                    </div>
                    <div t-if="o.payment_term_id" class="col-xs-3">
                        <strong>Payment Term:</strong>
                        <p t-field="o.payment_term_id" />
                    </div>
                </div>
                <table class="table table-condensed" style="border-top: 1px solid black; font-size:10px; font-family:sans-serif">
                    <thead>
                        <tr style="hight:30px">
                            <div t-if="o.x_print_image">
                                <th class="text-left">Product Image</th>
                            </div>
                            <th>Descripción</th>
                            <th class="text-right">PVTA</th>
                            <div t-if="o.x_print_discount">
                                <th class="text-right">%Desc</th>
                            </div>
                            <th class="text-right">PVP PVA</th>
                            <th class="text-right">Cantidad</th>
                            <th class="text-right">SUB-TOTAL</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody" style="font-size:10px; font-family:sans-serif">
                        <tr t-foreach="o.order_line" t-as="l" style="height:1px">
                            <div t-if="o.x_print_image">
                                <t t-if="o.x_image_sizes == 'image_small' and o.x_print_image ">
                                    <td>
                                        <span t-field="l.product_id.image_small" t-options="{'widget': 'image', 'class': 'img-rounded'}" />
                                    </td>
                                </t>
                            </div>
                            <td>
                                <span t-field="l.name" />
                            </td>
                            <td class="text-right">
                                <!-- <span t-field="l.list_price" /> -->
                            </td>
                            <div>
                                <td class="text-right">
                                    <!-- <span t-esc="round(l.total_discount,2)" /> -->
                                </td>
                            </div>
                            <td class="text-right">
                                <span t-field="l.price_unit" />
                            </td>
                            <td class="text-right">
                                <span t-esc="int(round(l.product_uom_qty,1))" />
                                <span groups="product.group_uom" t-field="l.product_uom" />
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}' />
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed" style="border-top: 1px solid black; font-size:12px; font-family:sans-serif">
                            <tr class="border-black">
                                <td><strong>Total sin Impuestos</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}' />
                                </td>
                            </tr>
                            <tr>
                                <td>IGV 18%</td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax" t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}' />
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}' />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <p t-field="o.note" />
                <p t-if="o.payment_term_id.note">
                    <strong>Payment Term:</strong>
                    <span t-field="o.payment_term_id.note" />
                </p>
                <div class="oe_structure" />
            </div>
        </t>
    </template>
    <template id="fxo_report_saleorder_custom">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="monivertical_report_customization.fxo_report_saleorder_document_custom" t-lang="o.partner_id.lang" />
            </t>
        </t>
    </template>
</odoo>