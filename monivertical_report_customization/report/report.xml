<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-if="doc.company_id.sale_template == 'classic'">
                    <t t-call="monivertical_report_customization.classic_report_saleorder_document" t-lang="doc.partner_id.lang"/>
                </t>
                <t t-if="doc.company_id.sale_template == 'fency'">
                    <t t-call="monivertical_report_customization.fency_report_saleorder_document" t-lang="doc.partner_id.lang"/>
                </t>
                <t t-if="doc.company_id.sale_template == 'modern'">
                    <t t-call="monivertical_report_customization.modern_report_saleorder_document" t-lang="doc.partner_id.lang"/>
                </t>
                <t t-if="doc.company_id.sale_template == 'odoo_standard'">
                    <t t-call="monivertical_report_customization.odoo_std_report_saleorder_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </t>
    </template>

    <data>
        <report id="action_monivertical_report_saleorder_document"
                string="Presupuesto / Pedido"
                model="sale.order" 
                report_type="qweb-pdf"
                file="monivertical_report_customization.report_saleorder" 
                name="monivertical_report_customization.report_saleorder"
                print_report_name="('Sale_Order' if object.state == 'sale' else 'Presupuesto-') +object.partner_id.name+'-'+ object.name + '.pdf'"
        />

        <report id="action_fxo_report_saleorder_custom"
                string="CotizaciÃ³n / Personalizada"
                model="sale.order" 
                report_type="qweb-pdf"
                file="monivertical_report_customization.fxo_report_saleorder_custom" 
                name="monivertical_report_customization.fxo_report_saleorder_custom"
                print_report_name="('Sale_Order' if object.state == 'sale' else 'Presupuesto-') +object.partner_id.name+'-'+ object.name + '.pdf'"
        />

    </data>
</odoo>
